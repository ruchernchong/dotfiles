syntax on
set backspace=indent,eol,start

set tabstop=2
set softtabstop=2
set number
set showmatch

" Recommended additions:
set expandtab
set shiftwidth=2
set autoindent
set smartindent

" Search improvements
set incsearch
set hlsearch
set ignorecase
set smartcase

" UI and usability
set ruler
set cursorline
set wildmenu
set showcmd
set laststatus=2
set title

" Performance and compatibility
set ttyfast
set encoding=utf-8

" Backup and undo
set nobackup
set nowritebackup
set noswapfile